  class LeftTriangle {
    public static void main(String[] args) {
        int n = 5; // size of triangle

        for(int i=1; i<=n; i++) {
            // print spaces first
            for(int j=i; j<n; j++) {
                System.out.print("  ");
            }
            // then print stars
            for(int k=1; k<=i; k++) {
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}

